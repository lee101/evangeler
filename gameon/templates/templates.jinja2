    <link type="text/css" rel="stylesheet" href="/gameon/static/css/social-likes.css"/>
    <link type="text/css" rel="stylesheet" href="/gameon/static/bower_components/bootstrap/dist/css/bootstrap.min.css"/>
    <link type="text/css" rel="stylesheet"
          href="/gameon/static/js/lib/loopj-jquery-simple-slider-fa64f59/css/simple-slider.css"/>
    <link type="text/css" rel="stylesheet"
          href="/gameon/static/js/lib/loopj-jquery-simple-slider-fa64f59/css/simple-slider-volume.css"/>
    <link type="text/css" rel="stylesheet" href="/gameon/static/css/gameon.css"/>
