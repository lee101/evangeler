    {% set desc = 'Evangeler Helps Companies Create Viral Marketing Campaigns! Evangelers compete on Evangeler.com to win prizes! See Evangelers Privacy Policy' -%}

    <title>{{ title }}</title>
    <meta name="description"
          content="{{ desc }}">

