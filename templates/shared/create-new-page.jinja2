<div class="mm-hero morange">
    <h2 class="mm-marketing-text mm-marketing-text--smaller">
        Create a page for {{ company.name }} on Evangeler
    </h2>
</div>
<div class="company-thumbs">
    <div class="mm-grid">
        <div class="row">

            <div class="col-md-12">
                <div class="mm-grid__section">

                    <div class="media">

                        <img class="pull-left media-object" src="{{ company.pic }}" alt="{{ company.name }} Logo"
                             width="100"
                             height="100">

                        <div class="media-body">
                            <form id="create-company-form" role="form">
                                <p class="media-heading mm-footer__heading"
                                        >{{ company.name }}</p>

                                <div class="form-group">
{#                                    <label for="companyAbout">About</label>#}
                                    <textarea id="companyAbout" class="text-smaller form-control"
                                              rows="4" name="companyAbout">{{ company.about }}</textarea>
                                </div>

                                <div class="form-group">
                                    <label for="companyWebsite"><i class="fa fa-globe mm-share-btn mm-share-btn--twitter"></i> Website</label>
                                    <input id="companyWebsite" class="text-smaller form-control"
                                              value="{{ company.website_link }}" name="companyWebsite">
                                </div>

                                <div class="form-group">
                                    <label for="companyTwitter"><i
                                            class="fa fa-twitter-square mm-share-btn mm-share-btn--twitter"></i> Twitter</label>
                                    <input id="companyTwitter" class="text-smaller form-control" placeholder="@evangelersays"
                                           name="companyTwitter">
                                </div>

                                <div class="form-group">
                                    <label for="companyGooglePlus"><i
                                            class="fa fa-google-plus-square mm-share-btn mm-share-btn--google-plus"></i> Google Plus Link</label>
                                    <input id="companyGooglePlus" class="text-smaller form-control"
                                           placeholder="https://plus.google.com/+Evangeler" name="companyGooglePlus">
                                </div>

                                <div class="form-group">
                                    <label for="companyDescription">Description</label>
                                    <textarea id="companyDescription" class="text-smaller form-control"
                                              rows="6" name="companyDescription">{{ company.description }}</textarea>
                                </div>

                                <button type="submit" class="btn btn-lg btn-warning">Create!</button>

                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>
