

<div class="mm-header">
    <div class="mm-logo">
        {% if path == '/' %}
            <span class="mm-logo__link" title="Evangeler - Social Marketing For The Masses!"
              >
                <img src="/static/img/evangeler-logo64.png" class="mm-logo__image" width="64" height="64"
                     alt="Evangeler">

                <h1 class="mm-logo__text">Evangeler</h1>
            </span>
        {% else %}
        <a href="/" class="mm-logo__link" title="Evangeler - Social Marketing For The Masses!"
          >
            <img src="/static/img/evangeler-logo64.png" class="mm-logo__image" width="64" height="64"
                 alt="Evangeler">

            <h1 class="mm-logo__text">Evangeler</h1>
        </a>
        {% endif %}
    </div>
    <div class="mm-header__nav">
        {% if path == '/how-it-works' %}
            <span class="mm-header__link active">
                How It Works
            </span>
        {% else %}
            <a class="mm-header__link" href="/how-it-works" title="How It Works"
              >
                How It Works
            </a>
        {% endif %}
        {% if window %}
            {% if user.facebook_access_token %}
                <a class="mm-header__link mm-header__profile-link pull-right" href="/account" title="My Account"
                  >
                    <img src="https://graph.facebook.com/{{ user.facebook_id }}/picture" width="50" height="50">
                </a>
            {% endif %}
        {% endif %}
    </div>
</div>
