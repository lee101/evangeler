{% macro backbtn() -%}
    <button type="button" class="back-btn gameon-btn-hg btn btn-info btn-lg"><span
            class="glyphicon glyphicon-arrow-left"></span></button>
{%- endmacro %}

{% macro logo() -%}
    <a href="/" class="mm-logo__link" title="Evangeler - Social Marketing For The Masses!"
       onclick="return gameon.gotoLink(this)" target="_blank">
        <img src="/static/img/evangeler-logo64.png" class="mm-logo__image" width="64" height="64"
             alt="Evangeler">

        <h1 class="mm-logo__text">Evangeler</h1>
    </a>
{%- endmacro %}



{% macro start() -%}
    <div class="mm-header">
        <div class="mm-logo">
            {{ logo() }}
        </div>
    </div>
    <div class="mm-hero">
        <p class="mm-marketing-text">
            Promote your product with the power of the people!
        </p>

        <p class="mm-marketing-text mm-marketing-text--smaller">
            Create viral marketing campaigns and appeal to the masses!
        </p>
        <button type="button" class="gameon-btn-hg btn btn-success btn-lg">Get Started Now!
        </button>
    </div>
    <div class="mm-hero mm-hero--light">
        <button type="button" class="gameon-btn-hg btn btn-info btn-lg" onclick="views.options()">Options</button>
    </div>
    <div class="mm-hero mm-hero--secondary">
        <button type="button" class="gameon-btn-hg btn btn-info btn-lg" onclick="views.options()">Options</button>
    </div>
    {{ footer() }}
{%- endmacro %}

